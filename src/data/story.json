      ]
    },

    {
      "id": "yeah",
      "type": "dialogue",
      "character": "erika-monsell",
      "text": "“Yeah.”",
      "next": "mobsters"
    },

    {
      "id": "mobsters",
      "type": "dialogue",
      "character": "erika-monsell",
      "text": "“I bet she doesn’t get woken up at three in the morning by mobsters having a knife fight…”",
