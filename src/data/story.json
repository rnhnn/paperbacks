{
  "id": "story",
  "title": "Monsello 188",
  "description": "A strange evening on a lonely street.",
  "initialAmbience": "street",
  "nodes": [
    {
      "id": "lonelyStreet",
      "type": "singleParagraph",
      "text": "At the end of the desolate and windy street, you <em>eventually</em> find the right building.",
      "next": "threeStoryBuilding"
    },
    {
      "id": "threeStoryBuilding",
      "type": "singleParagraph",
      "text": "A three-story relic from the '40s, with a rust-eaten plaque on the side that reads: Monsello 188.",
      "next": "doubtAboutNumber",
      "setAmbience": "rain"
    },
    {
      "id": "doubtAboutNumber",
      "type": "singleParagraph",
      "text": "Or is it 189?",
      "next": "reactingToTheBuilding"
    },
    {
      "id": "reactingToTheBuilding",
      "type": "dialogueChoice",
      "choices": [
        {
          "text": "“It’s here.”",
          "effects": { "wasSureItWasHere": true },
          "next": "kirbyRelief"
        },
        {
          "text": "“It’s… here?”",
          "effects": { "wasUnsureItWasHere": true },
          "next": "kirbyNotConvinced"
        }
      ]
    },
    {
      "id": "kirbyRelief",
      "type": "characterDialogue",
      "character": "tim-kirby",
      "text": "“Freaking finally.”",
      "next": "theStoryResumes"
    },
    {
      "id": "kirbyNotConvinced",
      "type": "characterDialogue",
      "character": "tim-kirby",
      "text": "“You don't sound too sure.”",
      "next": "theStoryResumes"
    },
    {
      "id": "theStoryResumes",
      "type": "singleParagraph",
      "text": "You look at the sidewalk and find...",
      "next": "findingAShoe"
    },
    {
      "id": "findingAShoe",
      "type": "singleParagraph",
      "text": "An old shoe?!",
      "inventoryAdd": ["old_shoe"],
      "effects": { "foundOldShoe": true },
      "next": "findingAShoppingList"
    },
    {
      "id": "findingAShoppingList",
      "type": "singleParagraph",
      "text": "And inside the shoe you find a shopping list.",
      "notesAdd": ["shopping_list_home"],
      "next": "flagChecker"
    },
    {
      "id": "flagChecker",
      "type": "characterDialogue",
      "character": "tim-kirby",
      "text": "Great, you are both sure of yourself and lucky.",
      "nextIf": [
        {
          "conditions": { "wasSureItWasHere": true },
          "next": "conditionalResponse"
        },
        {
          "conditions": { "wasUnsureItWasHere": true },
          "next": "someOtherStory"
        }
      ],
      "next": "someOtherStory"
    },
    {
      "id": "conditionalResponse",
      "type": "singleParagraph",
      "text": "Let me hear it.",
      "next": "oldLadyAppears"
    },
    {
      "id": "someOtherStory",
      "type": "singleParagraph",
      "text": "The final text.",
      "next": "oldLadyAppears"
    },
    {
      "id": "oldLadyAppears",
      "type": "characterDialogue",
      "character": "agnes",
      "text": "“Hey! What are you doing near my doorstep?”",
      "next": "agnesSecondLine"
    },
    {
      "id": "agnesSecondLine",
      "type": "characterDialogue",
      "character": "agnes",
      "text": "“I’ve had enough of youngsters sneaking around here.”",
      "next": "agnesRevealsName"
    },
    {
      "id": "agnesRevealsName",
      "type": "characterDialogue",
      "character": "agnes",
      "text": "“Ah, where are my manners. I’m Agnes.”",
      "effects": { "knowsAgnesName": true },
      "next": "finalAgnes"
    },
    {
      "id": "finalAgnes",
      "type": "characterDialogue",
      "character": "agnes",
      "text": "“Ok, bye!”",
      "next": "agnesKeepsRambling"
    },
    {
      "id": "agnesKeepsRambling",
      "type": "characterDialogue",
      "character": "agnes",
      "text": "“Will the circle be unbroken?”",
      "next": "kirbyIsBack"
    },
    {
      "id": "kirbyIsBack",
      "type": "characterDialogue",
      "character": "tim-kirby",
      "text": "“Of course lady. I'm back!”"
    }
  ]
}